{
  "name": "@mfe-stack/cli",
  "version": "0.2.0",
  "description": "Development CLI for micro-frontend projects",
  "keywords": [
    "micro-frontend",
    "mfe",
    "cli",
    "dev-tools",
    "module-federation"
  ],
  "license": "MIT",
  "author": "riyajahamedi",
  "repository": {
    "type": "git",
    "url": "https://github.com/riyajahamedi/create-mfe-stack.git",
    "directory": "packages/@mfe-stack/cli"
  },
  "homepage": "https://github.com/riyajahamedi/create-mfe-stack#readme",
  "bugs": {
    "url": "https://github.com/riyajahamedi/create-mfe-stack/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "bin": {
    "mfe": "./dist/index.js",
    "mfe-stack": "./dist/index.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "@clack/prompts": "^0.8.2",
    "picocolors": "^1.1.1",
    "execa": "^9.5.1",
    "find-up": "^7.0.0",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.16",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^2.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
